doctype html
html
  head
    title= title
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  body
    //ШАПКА СТРАНИЦЫ
    nav.navbar.navbar-expand-lg.fixed-top.sticky-top
      a.navbar-brand(href='#')
        //- h1.titleName Addel 
      img(src="img/logo1.svg" width = "150" height="50")
         
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(data-value='about' href='#')| Главная |
          li.nav-item
            a.nav-link(data-value='blog' href='#') Блог |
          li.nav-item
            a.nav-link(data-value='team' href='#') О нас |
          li.nav-item
            a.nav-link(data-value='contact' href='#')| Контакты |
        // Окно поиска
        form.form-inline 
          input.form-control(type="text" placeholder="Поиск")
          button.btn.btn-outline-success.myBtnSearch Искать
    

      //- .container
      //-   .d-flex.p-3.justify-content-center    
  header.header
    .container
      .description
      .row.text-center
        h1.subtitle.mx-auto.w-75.my-5.text-cente Добро пожаловать на официальную страницу 
        
          a.titleA(href="#") Addel
          p Мы предлагаем вам услуги файлого менеджера онлайн, без рекламы и регестрации.
          
            button.btn.btn-lg Туториал
              
      h1.subtitle.text-center Список файлов в текущей дирректории:
      .files.text-center Менеджер пакетов
        
        ul.menu
        each val in value
          
          li(class='menu_li' id = val+'a')
            span.searchQuery= val 
            a(class='button button--remove ' id = val  , onclick = 'delete_files("'+val+'"),delete_files("'+val+'a'+'")') 
              span.button--remove-text удалить
        else
          li.empty Ничего не вижу 
    
    
        button(class='button btn-lg button--add span-shadow' data-toggle="modal" data-target="#exampleModal" type="button" onclick='add_files()') Добавить новый файл +
      //Модельное окно
      #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
      .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Менеджер добавления нового файла
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
              form
                .form-group
                  label.col-form-label(for='recipient-name') Название файла:
                  input#recipient-name.form-control(type='text')
                .form-group
                  label.col-form-label(for='message-text') Введите текст:
                  textarea#message-text.form-control
            .modal-footer
              button.btn.btn-secondary(type='button' data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Send message  

    script(src="script.js")
  style
    include style.css
    

                    
      
        
